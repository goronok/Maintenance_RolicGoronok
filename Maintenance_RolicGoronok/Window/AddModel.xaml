<Window x:Class="Maintenance_RolicGoronok.AddModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая модель" Height="130" Width="400" FontStyle="Oblique" Background="WhiteSmoke" WindowStartupLocation="CenterScreen" FontSize="18">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Margin="20 0 0 0" Content="Введите новую марку: " Width="200"/>
            <TextBox x:Name="model" Width="150" Style="{DynamicResource textBox}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"  Grid.Row="1">
            <Button x:Name="add" Content="Добавить" Margin="50 0 0 0" Click="add_Click" Width="100" Style="{DynamicResource Button}"   />
            <Button x:Name="cancel" Content="Отмена" Margin="70 0 0 0" Style="{DynamicResource Button}" IsCancel="True"/>
        </StackPanel>
      
    </Grid>
</Window>
